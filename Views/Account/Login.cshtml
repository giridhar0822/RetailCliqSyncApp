@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background: linear-gradient(to bottom right, #f0f2f5, #dff7fa);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            background-color: #fff;
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .logo {
            max-width: 180px;
            height: auto;
            margin-bottom: 25px;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-login {
            background-color: #0d6efd;
            color: white;
            font-weight: bold;
            border-radius: 10px;
        }

        .btn-login:hover {
            background-color: #084dbf;
        }

        .form-label {
            font-weight: 500;
        }

        .emoji-label {
            font-size: 1.2rem;
            margin-right: 5px;
        }

        #errorMsg {
            color: #d9534f;
            font-weight: 500;
            margin-bottom: 15px;
        }

        .login-heading {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 30px;
            font-weight: 800;
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.1);
            letter-spacing: 1px;
        }

        .gradient-text {
            background: linear-gradient(to right, #00c6ff, #0072ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        #chatbot {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 300px;
            background: white;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 0 10px #ccc;
            font-family: Arial, sans-serif;
            z-index: 9999;
        }

        #chatbox {
            height: 200px;
            overflow-y: auto;
            margin-bottom: 10px;
            padding: 5px;
            border: 1px solid #ddd;
        }

        #chatbox div {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <img src="~/images/retailcliq.png" alt="RetailCliq Logo" class="logo" />
        <h2 class="login-heading mb-4">
            <span class="gradient-text">Login</span>
        </h2>

        <div id="errorMsg"></div>

        <form id="loginForm">
            <div class="form-group mb-3 text-start">
                <label for="username" class="form-label"><span class="emoji-label">ðŸ‘¤</span>Username</label>
                <input type="text" class="form-control" id="username" placeholder="Enter username" required />
            </div>
            <div class="form-group mb-4 text-start">
                <label for="password" class="form-label"><span class="emoji-label">ðŸ”‘</span>Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter password" required />
            </div>
            <button type="submit" class="btn btn-login w-100"><span class="emoji-label">ðŸ‘‰</span>Login</button>
        </form>
    </div>

    <!-- Chatbot UI -->
    <div id="chatbot">
        <div id="chatbox"></div>
        <input type="text" id="chatInput" placeholder="Ask something..." />
        <button onclick="sendRuleMessage()">Send</button>
    </div>

    <!-- Chatbot Script -->
    <script>
        const ruleBasedAnswers = {
            "hi": "Hello! How can I help you?",
            "hello": "Hi there! Ask me something.",
            "how to sync data": "Click the 'Sync Now' button in the top-right.",
            "how to reset password": "Go to Settings > Reset Password.",
            "how to add product": "Click 'Add Product' in Inventory section.",
            "bye": "Goodbye! Have a nice day."
        };

        function sendRuleMessage() {
            const input = document.getElementById("chatInput");
            const userMessage = input.value.trim().toLowerCase();
            const chatbox = document.getElementById("chatbox");

            if (!userMessage) return;

            chatbox.innerHTML += `<div><b>You:</b> ${userMessage}</div>`;
            input.value = '';

            const response = ruleBasedAnswers[userMessage] || "Sorry, I didn't understand that.";
            chatbox.innerHTML += `<div><b>Bot:</b> ${response}</div>`;
            chatbox.scrollTop = chatbox.scrollHeight;
        }

        // Add Enter key support
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById("chatInput");
            if (input) {
                input.addEventListener("keypress", function (e) {
                    if (e.key === "Enter") {
                        sendRuleMessage();
                        e.preventDefault();
                    }
                });
            }
        });
    </script>

    <!-- Other Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/login.js"></script>
</body>
</html>
