<style>
    .gradient-text {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
<div class="container mt-5">
    <h3 class="text-center mb-4 fw-bold display-6 gradient-text">
     Synchronize Master Data
</h3

    <div class="form-check form-switch mb-4 text-center">
        <input class="form-check-input" type="checkbox" id="selectAll">
        <label class="form-check-label fw-bold" for="selectAll"> Select All</label>
    </div>
    <br/>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <!-- Category -->
    <div class="col">
    <div class="card bg-light shadow-sm border-0 h-100">
        <label for="category" class="card-body d-flex align-items-center cursor-pointer m-0 w-100">
            <input class="form-check-input api-checkbox" type="checkbox" id="category"
                data-name="Category" data-url="http://192.168.1.54:8080/api/CategoryMaster/bulk-upload" />
            <span class="fw-semibold fs-5">📂 Category</span>
        </label>
    </div>
</div>


    <!-- Brand -->
    <div class="col">
        <div class="card bg-light shadow-sm border-0 h-100">
            <label for="brand" class="card-body d-flex align-items-center cursor-pointer m-0 w-100">
                <input class="form-check-input me-2 api-checkbox" type="checkbox" id="brand"
                    data-name="Brand" data-url="http://192.168.1.54:8080/api/BrandMaster/bulk-upload" />
                <span class="fw-semibold">🏷️ Brand</span>
            </label>
        </div>
    </div>

    <!-- Variant -->
    <div class="col">
        <div class="card bg-light shadow-sm border-0 h-100">
            <label for="variant" class="card-body d-flex align-items-center cursor-pointer m-0 w-100">
                <input class="form-check-input me-2 api-checkbox" type="checkbox" id="variant"
                    data-name="Variant" data-url="http://192.168.1.54:8080/api/Variants/bulk-upload" />
                <span class="fw-semibold">🧬 Variant</span>
            </label>
        </div>
    </div>

    <!-- Specification -->
    <div class="col">
        <div class="card bg-light shadow-sm border-0 h-100">
            <label for="spec" class="card-body d-flex align-items-center cursor-pointer m-0 w-100">
                <input class="form-check-input me-2 api-checkbox" type="checkbox" id="spec"
                    data-name="Specification" data-url="http://192.168.1.54:8080/api/Specifications/bulk-upload" />
                <span class="fw-semibold">⚙️ Specification</span>
            </label>
        </div>
    </div>

    <!-- Product -->
    <div class="col">
        <div class="card bg-light shadow-sm border-0 h-100">
            <label for="product" class="card-body d-flex align-items-center cursor-pointer m-0 w-100">
                <input class="form-check-input me-2 api-checkbox" type="checkbox" id="product"
                    data-name="Product" data-url="http://192.168.1.54:8080/api/ProductMaster/bulk-upload" />
                <span class="fw-semibold">🛍️ Product</span>
            </label>
        </div>
    </div>
</div>



 <div class="text-center mt-4 mb-3 glass-box">
    <button class="btn btn-sync me-3" id="syncBtn">
        <i class="fas fa-sync-alt me-2"></i> Synchronise
    </button>
    <button class="btn btn-reset" id="resetBtn">
        <i class="fas fa-redo me-2"></i> Reset
    </button>
</div>


<!-- Spinner with icon -->
<div class="text-center loading-spinner glass-box p-4 mt-4" id="loader" style="display: none;">
    <i class="fas fa-circle-notch fa-spin fa-3x text-primary"></i>
    <div id="currentApi" class="mt-3 fw-semibold text-primary fs-5">Processing...</div>
</div>






    <div id="responseMessages" class="response-box"></div>
</div>

<!-- jQuery and custom JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/sync.js"></script>
