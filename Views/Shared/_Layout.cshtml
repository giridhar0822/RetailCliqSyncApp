<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RetailCliqSyncApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RetailCliqSyncApp.styles.css" asp-append-version="true" />
</head>
<body>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
<div id="chatbot">
    <div id="chatbox"></div>
    <input type="text" id="chatInput" placeholder="Ask something..." />
    <button onclick="sendRuleMessage()">Send</button>
</div>

<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<style>
    #chatbot {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 300px;
        background: white;
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 0 10px #ccc;
        font-family: 'Roboto', sans-serif;
    }
    #chatbox {
        height: 200px;
        overflow-y: auto;
        margin-bottom: 10px;
        padding: 5px;
        border: 1px solid #ddd;
    }
    #chatbox div {
        margin-bottom: 5px;
    }
</style>

<script src="~/js/Chatbot.js"></script>

</body>
</html>
